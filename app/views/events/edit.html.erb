<div class="results">
  <div class="update">
    <%= form_for(@event) do |f| %>

      <div class="field">
        <%= f.label :EVENT %><br>
        <%= f.text_field :event_name %>
      </div>
      <div class="field">
        <%= f.label :DESCRIPTION %><br>
        <%= f.text_area :description %>
      </div>
        <%= f.label :DATE %>
        <%= f.text_field :date %><br>
        <%= f.label :TIME %>
        <%= f.text_field :time %><br>
        <%= f.label :ADDRESS%>
        <%= f.text_field :address %><br>
        <%= f.label :LOCATION %>
        <%= f.text_field :location %><br>
        <%= f.label :DIFFICULTY%>
        <%= f.text_field :difficulty %><br>

      <div class="actions">
        <%= f.submit "Update", class: "update_button" %>
      </div>
    <% end %>
  </div>
</div>